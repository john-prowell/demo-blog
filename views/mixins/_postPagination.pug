mixin postPagination(page, pages, count)
  //-pre=h.dump(count)
  .pagination
    .pagination__prev
      if page > 1
        a(href=`/posts/page/${page - 1}`) Prev
    .pagination__text
      p Page #{page} of #{pages} — #{count} total results
    .pagination__next
      if page < pages
        a(href=`/posts/page/${parseFloat(page) + 1}`) Next

